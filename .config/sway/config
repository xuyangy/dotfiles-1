output DP-2 mode 1920x1080

client.focused #ffff00 #ffff00 #ffff00 #ff0000 #ffff00
default_border pixel 5

bar {
  swaybar_command waybar
}

set $mod Mod4
bindsym $mod+f fullscreen
bindsym $mod+Return exec kitty
bindsym $mod+Shift+return exec ec

bindsym $mod+d exec "bemenu-run -l 5"
bindsym $mod+Shift+q kill
bindsym $mod+Shift+c reload
bindsym $mod+Shift+e exec "swaymsg exit"

bindsym $mod+m exec "thunderbird"
bindsym $mod+i exec "firefox-nightly"
bindsym $mod+shift+t exec "bemenu_translate.sh"
bindsym $mod+Shift+s exec "QT_QPA_PLATFORM=xcb XDG_CURRENT_DESKTOP=sway flameshot gui -r | wl-copy"

set $left h
set $down j
set $up k
set $right l

bindsym $mod+$left focus left
bindsym $mod+$down focus down
bindsym $mod+$up focus up
bindsym $mod+$right focus right

bindsym $mod+Shift+$left move left
bindsym $mod+Shift+$down move down
bindsym $mod+Shift+$up move up
bindsym $mod+Shift+$right move right

bindsym $mod+v splith
bindsym $mod+s splitv

bindsym $mod+q layout stacking
bindsym $mod+t layout tabbed
bindsym $mod+e layout toggle split

bindsym XF86MonBrightnessUp exec brightnessctl set +10%
bindsym XF86MonBrightnessDown exec brightnessctl set 10%-
bindsym XF86AudioRaiseVolume exec pactl set-sink-volume @DEFAULT_SINK@ +5%
bindsym XF86AudioLowerVolume exec pactl set-sink-volume @DEFAULT_SINK@ -5%

exec_always "systemctl --user import-environment; systemctl --user start sway-session.target"
exec dbus-update-activation-environment --systemd WAYLAND_DISPLAY XDG_CURRENT_DESKTOP=sway
exec "XDG_CURRENT_DESKTOP=Unity nextcloud --background"
exec flameshot
#exec pidgin
#exec "calibre --start-in-tray"
#exec "/usr/lib/kdeconnectd"

input "type:keyboard" {
    xkb_layout pl,es
    xkb_options caps:escape
    repeat_delay 200
    repeat_rate 30
}

floating_modifier $mod normal # dragging windows \w mouse
bindsym $mod+Shift+space floating toggle
bindsym $mod+space focus mode_toggle

bindsym $mod+a focus parent

mode "resize" {
    bindsym $left resize shrink width 10px
    bindsym $down resize grow height 10px
    bindsym $up resize shrink height 10px
    bindsym $right resize grow width 10px

    bindsym Return mode "default"
    bindsym Escape mode "default"
}
bindsym $mod+r mode "resize"

include ./clamshell
include ./lockidle
include ./workspaces
include ./scratchpad
include ./signal
include /etc/sway/config.d/*
